import React, { useState, useEffect } from 'react';
import { Plus, TrendingUp, TrendingDown, Wallet } from 'lucide-react';
import apiService from '../services/api';
import AddTransactionModal from '../components/AddTransactionModal';

const Home = () => {
  const [dashboardData, setDashboardData] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const [showAddModal, setShowAddModal] = useState(false);

  useEffect(() => {
    fetchDashboardData();
  }, []);

  const fetchDashboardData = async () => {
    try {
      setLoading(true);
      const response = await apiService.home.getDashboard();
      setDashboardData(response.data);
      setError(null);
    } catch (err) {
      setError('Failed to load dashboard data. Please make sure the backend is running.');
      console.error('Error fetching dashboard:', err);
    } finally {
      setLoading(false);
    }
  };

  const formatCurrency = (amount) => {
    return new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: 'USD',
    }).format(amount || 0);
  };

  const formatDate = (dateString) => {
    const options = { year: 'numeric', month: 'short', day: 'numeric' };
    return new Date(dateString).toLocaleDateString('en-US', options);
  };

  if (loading) {
    return (
      <div className="main-content">
        <div className="loading">Loading dashboard data...</div>
      </div>
    );
  }

  return (
    <div className="main-content">
      {/* Header */}
      <div className="page-header">
        <div>
          <h1 className="page-title">Welcome, John Doe!</h1>
          <p className="page-subtitle">Here's your financial overview</p>
        </div>
        <button className="btn btn-primary" onClick={() => setShowAddModal(true)}>
          <Plus size={20} />
          Add New Transaction
        </button>
      </div>

      {error && <div className="error">{error}</div>}

      {/* Stats Cards */}
      <div className="stats-grid">
        <div className="stat-card">
          <div className="stat-label">Total Balance</div>
          <div className="stat-value">
            {formatCurrency(dashboardData?.totalBalance)}
          </div>
          <div className="stat-change">
            <Wallet size={16} />
            As of today
          </div>
        </div>

        <div className="stat-card">
          <div className="stat-label">Month's Income</div>
          <div className="stat-value" style={{ color: '#10b981' }}>
            {formatCurrency(dashboardData?.monthlyIncome)}
          </div>
          <div className="stat-change positive">
            <TrendingUp size={16} />
          
          </div>
        </div>

        <div className="stat-card">
          <div className="stat-label">Month's Expenses</div>
          <div className="stat-value" style={{ color: '#ef4444' }}>
            {formatCurrency(dashboardData?.monthlyExpense)}
          </div>
          <div className="stat-change negative">
            <TrendingDown size={16} />
            
          </div>
        </div>
      </div>

      {/* Recent Activity */}
      <div className="card">
        <h2 className="card-title">Recent Activity</h2>
        <div className="table-container">
          <table>
            <thead>
              <tr>
                <th>Description</th>
                <th>Category</th>
                <th>Date</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              {dashboardData?.recentTransactions?.length > 0 ? (
                dashboardData.recentTransactions.map((transaction, index) => (
                  <tr key={index}>
                    <td>{transaction.description}</td>
                    <td>{transaction.category}</td>
                    <td>{formatDate(transaction.date)}</td>
                    <td className={transaction.amount >= 0 ? 'text-success' : 'text-danger'}>
                      {formatCurrency(transaction.amount)}
                    </td>
                  </tr>
                ))
              ) : (
                <tr>
                  <td colSpan="4" className="text-center">
                    No recent transactions found
                  </td>
                </tr>
              )}
            </tbody>
          </table>
        </div>
      </div>

      {/* Add Transaction Modal */}
      {showAddModal && (
        <AddTransactionModal 
          onClose={() => setShowAddModal(false)}
          onSuccess={fetchDashboardData}
        />
      )}
    </div>
  );
};

export default Home;

